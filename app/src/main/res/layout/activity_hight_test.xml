<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/colorProgress"
            android:text="test 1" />

        <TextView
            android:id="@+id/test2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/colorGreen50"
            android:text="test 2" />

        <TextView
            android:id="@+id/test3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="test 3" />

        <TextView
            android:id="@+id/test4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/teal_200"
            android:text="test 4" />

    </LinearLayout>

    <com.example.myapplication.hight.UserHintView
        android:id="@+id/hintView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--    <com.example.myapplication.hight.EdgeOverflowHiLightView-->
    <!--        android:id="@+id/edgeOverflowHiLightView"-->
    <!--        android:visibility="visible"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->
</RelativeLayout>